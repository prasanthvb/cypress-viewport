{
  "name": "cypress-viewport",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rmdir /S /Q cypress\\reports && mkdir cypress\\reports && mkdir cypress\\reports\\mochareports",
    "pretest": "npm run clean:reports",
    "mobileScript": "cypress run  --spec cypress/integration/Testcases/MobileTest.spec.js",
    "webScript": "cypress run  --spec cypress/integration/Testcases/BrowserTest.spec.js",
    "chrome": "npm run webScript --browser chrome",
    "firefox": "npm run webScript --browser firefox",
    "edge": "npm run webScript --browser edge",
    "electron": "npm run webScript --browser headless",
    "safari": "npm run webScript --browser safari",
    "scripts" : "npm run mobileScript && npm run webScript",
    "browsers": "npm run chrome && npm run edge && npm run electron",
    "cypress-test" : "npm run mobileScript && npm run browsers",
    "cypress-regression-test": "cypress run",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test": "npm run scripts || npm run posttest",
    "cy-test": "npm run pretest && npm run cypress-regression-test && npm run posttest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prasanthvb/cypress-viewport.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/prasanthvb/cypress-viewport/issues"
  },
  "homepage": "https://github.com/prasanthvb/cypress-viewport#readme",
  "devDependencies": {
    "cypress": "^9.5.3",
    "cypress-multi-reporters": "^1.5.0",
    "mocha": "^9.1.1",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
